#include <cstdlib>
#include <iostream>
using namespace std;

void quicksort(x,lewy,prawy)
{
    int srodek = int[(lewy+prawy)/2];
    int piwot = lewy;
    x[srodek] = x[prawy];
    granica = lewy;
    for(int i=lewy;i++;i<prawy)
    {
        if(x[i]<x[piwot])
        {
            swap(x[i],x[granica]);
            granica++;
        }
    }
    x[prawy]=x[granica];
    x[granica]=piwot;
    if(lewy<granica-1)
    {
        quicksort(x,lewy,granica-1);
    }
    if(granica+1<prawy)
    {
        quicksort(x,granica+1,prawy);
    }
}